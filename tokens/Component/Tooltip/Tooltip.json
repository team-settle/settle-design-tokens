    "color": {
      "background": {
        "value": "{basic.color.grey.900}",
        "type": "color"
      },
      "text": {
        "value": "{basic.color.base.white}",
        "type": "color"
      },
      "outline": {
        "value": "{basic.color.base.none}",
        "type": "color"
      }
