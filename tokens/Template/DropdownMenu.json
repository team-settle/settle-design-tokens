{
  "dropdownMenu": {
    "item": {
      "color": {
        "default": {
          "background": {
            "type": "color",
            "value": "{theme.color.common.none}"
          },
          "text": {
            "type": "color",
            "value": "{theme.color.common.onSurfacePrimary}"
          },
          "icon": {
            "type": "color",
            "value": "{theme.color.common.onSurfaceTertiary}"
          }
        },
        "hovered": {
          "background": {
            "value": "rgba({theme.color.onSurfaceOpaque}, {basic.opacity.100})",
            "type": "color"
          },
          "text": {
            "type": "color",
            "value": "{theme.color.common.onSurfacePrimary}"
          },
          "icon": {
            "type": "color",
            "value": "{theme.color.common.onSurfaceTertiary}"
          }
        },
        "selected": {
          "background": {
            "value": "rgba({theme.color.secondary}, {theme.opacity.state.focused})",
            "type": "color"
          },
          "text": {
            "type": "color",
            "value": "{theme.color.common.onSurfacePrimary}"
          },
          "icon": {
            "type": "color",
            "value": "{theme.color.common.secondary}"
          }
        },
        "disabled": {
          "background": {
            "type": "color",
            "value": "{theme.color.common.none}"
          },
          "text": {
            "type": "color",
            "value": "{theme.color.common.onSurfaceTertiary}"
          },
          "icon": {
            "type": "color",
            "value": "{theme.color.common.onSurfaceTertiary}"
          }
        }
      }
    },
    "container": {
      "color": {
        "background": {
          "type": "color",
          "value": "{theme.color.common.surface}"
        }
      },
      "borderRadius": {
        "desktop": {
          "value": "{theme.size.shape.desktop.small} * {basic.borderRadius.small}",
          "type": "borderRadius"
        }
      },
      "spacing": {
        "desktop": {
          "padding-h": {
            "value": "$basic.size.scale.desktop.none",
            "type": "spacing"
          },
          "padding-v": {
            "value": "$basic.size.scale.desktop.100",
            "type": "spacing"
          }
        },
        "mobile": {
          "padding-h": {
            "value": "$basic.size.scale.mobile.none",
            "type": "spacing"
          },
          "padding-v": {
            "value": "$basic.size.scale.mobile.100",
            "type": "spacing"
          }
        }
      }
    }
  }
}