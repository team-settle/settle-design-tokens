{
  "navigationMenuItem": {
    "color": {
      "default": {
        "background": {
          "type": "color",
          "value": "{theme.color.common.none}"
        },
        "icon": {
          "type": "color",
          "value": "{theme.color.common.onSurfaceTertiary}"
        },
        "text": {
          "type": "color",
          "value": "{theme.color.common.onSurfaceSecondary}"
        }
      },
      "hovered": {
        "background": {
          "value": "rgba({theme.color.common.onSurfaceOpaque}, {theme.opacity.state.hovered})",
          "type": "color"
        },
        "icon": {
          "type": "color",
          "value": "{theme.color.common.onSurfaceSecondary}"
        },
        "text": {
          "type": "color",
          "value": "{theme.color.common.onSurfacePrimary}"
        }
      },
      "selected": {
        "background": {
          "value": "rgba({theme.color.common.secondary}, {theme.opacity.state.focused})",
          "type": "color"
        },
        "icon": {
          "type": "color",
          "value": "{theme.color.common.secondary}"
        },
        "text": {
          "type": "color",
          "value": "{theme.color.common.onSurfacePrimary}"
        }
      }
    },
    "borderRadius": {
      "desktop": {
        "value": "{theme.size.shape.desktop.small} * {basic.borderRadius.small}",
        "type": "borderRadius"
      },
      "mobile": {
        "value": "{theme.size.shape.mobile.small} * {basic.borderRadius.small}",
        "type": "borderRadius"
      }
    }
  }
}