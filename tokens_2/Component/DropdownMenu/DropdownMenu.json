{
  "dropdownMenu": {
    "color": {
      "background": {
        "type": "color",
        "value": "{theme.color.common.surface}"
      }
    },
    "borderRadius": {
      "desktop": {
        "value": "{theme.size.shape.small} * {basic.borderRadius.small}",
        "type": "borderRadius"
      }
    },
    "spacing": {
      "desktop": {
        "padding-h": {
          "value": "{basic.size.scale.none}",
          "type": "spacing"
        },
        "padding-v": {
          "value": "{basic.size.scale.100}",
          "type": "spacing"
        }
      },
      "mobile": {
        "padding-h": {
          "value": "$basic.size.scale.mobile.none",
          "type": "spacing"
        },
        "padding-v": {
          "value": "$basic.size.scale.mobile.100",
          "type": "spacing"
        }
      }
    }
  }
}